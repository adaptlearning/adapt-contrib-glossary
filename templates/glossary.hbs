{{! make the _globals object in course.json available to this template}}
{{import_globals}}

<div class="glossary__inner js-glossary-inner">

  <div class="glossary__header">
    <div class="glossary__header-inner">

      <div
        id='drawer-heading'
        class='glossary__title{{#unless displayTitle}} aria-label{{/unless}}'
        role='heading'
        aria-level="{{a11y_aria_level _id 'drawer' _ariaLevel}}"
      >
        <div class='glossary__title-inner'>
          {{#if displayTitle}}{{{displayTitle}}}{{else}}{{title}}{{/if}}
        </div>
      </div>

      <div class="aria-label">{{{a11y_aria_label _globals._extensions._glossary.glossary}}}</div>

      {{#if body}}
      <div class='glossary__body'>
        <div class='glossary__body-inner'>
          {{{body}}}
        </div>
      </div>
      {{/if}}

      {{#if _isSearchEnabled}}
      <div class="glossary__search-container js-glossary-search-container">
        <div class="glossary__textbox-container">

          <input class="glossary__textbox js-glossary-textbox-change" id="glossarySearch" type="text" placeholder="{{{searchPlaceholder}}}" aria-label="{{{searchPlaceholder}}}">

          <div class="label-icon glossary__search-icon js-glossary-search-icon">
            <div class="icon" aria-hidden="true"></div>
          </div>

          <button class="btn-icon glossary__cancel-btn u-display-none js-glossary-cancel-btn-click" tabindex="0" aria-label="{{clearSearch}}">
            <span class="icon" aria-hidden="true"></span>
          </button>
        </div>

        <div class="glossary__checkbox-container">
          <input class="glossary__checkbox-input js-glossary-checkbox-change" id="glossaryCheckbox" type="checkbox">
          <label class="glossary__checkbox-label" for="glossaryCheckbox">
            {{{searchWithInDescriptionLabel}}}
          </label>
        </div>

      </div>
      {{/if}}

      {{#if _isIndexEnabled}}
      <div class="glossary__index-container js-glossary-index-container" role="navigation" aria-label="{{_globals._extensions._glossary.labelNavigation}}"></div>
      {{/if}}

    </div>
  </div>

  <div class="glossary__items-container js-glossary-items-container" role="list">
    {{! Glossary items rendered here}}
  </div>

  <div class="glossary__item-not-found js-glossary-item-not-found u-display-none">
    <div class="glossary__item-not-found-inner">
      {{{itemNotFoundMessage}}}
    </div>
  </div>

  <div class="glossary__alert js-glossary-alert aria-label" aria-live="polite" aria-atomic="true"></div>

</div>
